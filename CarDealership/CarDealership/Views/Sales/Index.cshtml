
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<form id="searchForm" class="form-inline">
    <input type="hidden" id="searchType" value="Index" />
    <div class="form-group">
        <input type="text" id="makeModelYear" placeholder="Make, Model, or Year" name="makeModelYear" />
    </div>
    <div class="form-group">
        <input type="number" placeholder="Min Year" id="minYear" />
        <input type="number" placeholder="Max Year" id="maxYear" />
    </div>
    <div class="form-group">
        <input type="text" placeholder="Min Price" id="minPrice" />
        <input type="text" placeholder="Max Price" id="maxPrice" />
    </div>
    <button type="submit">Search</button>
</form>

<div class="alert alert-danger" role="alert" id="errorMessages" hidden>
    Validation Messages here
</div>

<div id="vehicleList"></div>

@section scripts
{   
    <script type="text/javascript">
        function Activate(id) {
            window.location.href = "/Sales/Purchase/" + id;
        }
    </script>
    <script src="~/Scripts/SearchHandler.js"></script>
}
